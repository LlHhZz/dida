
page {
    height: 100vh;
}
.scroll-container {
    overflow-y: auto;
}
.background {
    width: 100vw;
    height: 100vh;
    position: absolute;
    top: 0;
    left: 0;
    background-size: 100% 100%;
    background-color: #ffd955;
}
.full-label {
    width: 97vw;
    height: 0vh;
    position: absolute;
    top: 50vh;
    left: 1.4%;
    background-size: 100% 100%;
    background-color: #fefcf6;
}
.img-full-screen {
    height: 100vh;
    width: 100vw;
    background-color: #ffd955;
}
.story_title {
    display: block;
    margin-top: 260rpx;
}
.story_content {
    display: block;
    margin-top: 100rpx;
}
.button-container {
    position: fixed;
    bottom: 0;
    /* 底部对齐 */
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding-bottom: 50rpx;
}
.love {
    background-color: #ffd74f;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100rpx;
    margin-left: 70rpx;
}
.share {
    background-color: #ffd74f;
    width: 500rpx;
    height: 100rpx;
    border-radius: 100rpx;
    margin-right: 35rpx;
}
.share-page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5);
    /* 半透明黑色背景 */
    display: flex;
    justify-content: center;
    align-items: center;
}


.container {
    padding: 40rpx;
    margin-top: 100rpx;
}
.option {
    margin-bottom: 40rpx;
}
.option-title {
    margin-right: 10px;
}
.picker {
    border: 2rpx solid #ccc;
    border-radius: 8rpx;
    padding: 20rpx;
}
textarea {
    width: 100%;
    height: 400rpx;
    border: 2rpx solid #ccc;
    border-radius: 8rpx;
    margin-bottom: 40rpx;
}
.upload-csv-file {
    width: 100%;
    height: 5%;
}
button {
    width: 100%;
    padding: 10rpx;
    margin-bottom: 20rpx;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 8rpx;
    cursor: pointer;
}

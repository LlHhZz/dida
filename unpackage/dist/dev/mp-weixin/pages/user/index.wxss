
page {
    height: 100vh;
}
.img-full-screen {
    height: 100vh;
    width: 100vw;
    background-color: #fff9ed;
}
.user-container {
    height: 300rpx;
    text-align: center;
}
.info-container {
    display: flex;
    align-items: center;
    margin: 40rpx;
    padding: 20rpx;
    padding-bottom: 0%;
    margin-bottom: 0%;
}
.info {
    height: 200rpx;
    width: 200rpx;
    border-radius: 100rpx;
    margin: 10rpx;
}
.info text {
    display: block;
    color: white;
    margin-top: 20rpx;
}
.button-container {
    display: block;
    padding-top: 0%;
}
.option-item {
    width: 600rpx;
    height: 120rpx;
}
.option-item image {
    width: 65rpx;
    height: 65rpx;
}
